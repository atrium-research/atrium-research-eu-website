---
import Img from "@/components/content/img.astro";

interface Props {
	alignment: "center" | "stretch";
	alt?: string;
	src: string;
}

const { alignment, alt = "", src } = Astro.props;
---

<figure class="flex flex-col" class:list={alignment === "center" ? "items-center" : undefined}>
	{
		/* TODO: consider adding the image import in a rehype plugin, similar to `rehype-mdx-import-media`. */
	}
	<Img alt={alt} src={src} />
	<figcaption><slot /></figcaption>
</figure>
