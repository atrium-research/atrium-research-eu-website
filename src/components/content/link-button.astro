---
import Link from "@/components/link.astro";

interface Props {
	href: string;
	label: string;
}

const { href, label } = Astro.props;
---

<div class="flex justify-center">
	<Link
		class="my-4 inline-flex rounded-md bg-brand px-6 py-2 font-heading font-semibold text-white no-underline transition hover:bg-brand-intent focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-brown"
		href={href}
	>
		{label}
	</Link>
</div>
