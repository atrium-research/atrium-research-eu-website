---
import Link from "@/components/link.astro";

interface Props {
	item: {
		discriminant: "events" | "news" | "pages" | "partners";
		value: string;
	};
}

const { item } = Astro.props;

const href =
	item.discriminant === "pages" ? `/${item.value}` : `/${item.discriminant}/${item.value}`;
---

<Link href={href}><slot /></Link>
