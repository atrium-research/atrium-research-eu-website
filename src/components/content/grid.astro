---
interface Props {
	/** @default "stretch" */
	alignment?: "center" | "stretch";
	layout:
		| "four-columns"
		| "four-one-columns"
		| "one-four-columns"
		| "one-three-columns"
		| "one-two-columns"
		| "three-columns"
		| "three-one-columns"
		| "two-columns"
		| "two-one-columns";
}

const { alignment = "stretch", layout } = Astro.props;

const alignments = {
	center: "sm:items-center",
	stretch: "",
};

const layouts: Record<Props["layout"], string> = {
	"two-columns": "sm:grid-cols-2",
	"three-columns": "sm:grid-cols-3",
	"four-columns": "sm:grid-cols-4",

	"one-two-columns": "sm:grid-cols-[1fr_2fr]",
	"one-three-columns": "sm:grid-cols-[1fr_3fr]",
	"one-four-columns": "sm:grid-cols-[1fr_4fr]",

	"two-one-columns": "sm:grid-cols-[2fr_1fr]",
	"three-one-columns": "sm:grid-cols-[3fr_1fr]",
	"four-one-columns": "sm:grid-cols-[4fr_1fr]",
};
---

<div class:list={["grid content-start gap-x-8", alignments[alignment], layouts[layout]]}>
	<slot />
</div>
