---
import Link from "@/components/link.astro";

interface Props {
	class?: string;
	href: URL | string;
}

const { class: className, ...rest } = Astro.props;
---

<Link
	{...rest}
	class:list={[
		"rounded inline-flex w-full px-4 py-2.5 text-neutral-700 transition hover:bg-neutral-50 hover:text-neutral-950",
		className,
	]}
	data-nav-menu-item
>
	<slot />
</Link>
